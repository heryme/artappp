<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical"
    tools:context="com.artproficiencyapp.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/ic_top_bar"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_logo_hd" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.artproficiencyapp.common.RregularEditext
                android:id="@+id/edtUsernameEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edt_round_corner"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_email_large"
                android:hint="@string/signup_email"
                android:textColorHint="#757575"
                android:textColor="#757575"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:paddingLeft="5dp" />

            <com.artproficiencyapp.common.RregularEditext
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edt_round_corner"
                android:drawableEnd="@drawable/eye_icon_size"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_password_large"
                android:hint="@string/password"
                android:textColorHint="#757575"
                android:textColor="#757575"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="16dp" />

            <com.artproficiencyapp.common.RegularTextview
                android:id="@+id/txtForgotpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="@string/forgot_password"
                android:textColor="#7A7170"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="170dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_signup"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/sigin_title"
                android:textColor="@color/White" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#b2b2b2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:text="@string/or"
                    android:textColor="#b2b2b2"
                    android:textStyle="bold" />

                <View
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#b2b2b2" />
            </LinearLayout>

            <Button
                android:id="@+id/ivFacebookLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/signin_with_fb"
                android:layout_marginTop="@dimen/margin_top_10"
                android:textAllCaps="false"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/White"
                android:padding="@dimen/padding_14"
                android:background="@drawable/btn_fb"
                 />

            <ImageView
                android:id="@+id/ivFingerPrint"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_top_10"
                android:background="@drawable/ic_scan" />

            <com.artproficiencyapp.common.RegularTextview
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_top_10"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="@string/scan_your_finger_print_to_login"
                android:textColor="#7A7170"
                android:textSize="15sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="@dimen/margin_top_10"
                android:gravity="center"
                android:orientation="horizontal">

                <com.artproficiencyapp.common.RegularTextview
                    android:id="@+id/txtSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_Msg"
                    android:textColor="#7A7170"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="normal" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>