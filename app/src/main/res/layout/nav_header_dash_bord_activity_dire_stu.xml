<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headerProfile"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="@dimen/nav_header_height_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_top_10">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/nvProfileImage"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="@dimen/margin_left_10"
            android:layout_marginTop="@dimen/margin_left_10"
            app:roundAsCircle="true"
            fresco:progressBarImage="@drawable/progress_bar"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="@dimen/margin_top_10">

            <com.artproficiencyapp.common.RegularTextview
                android:id="@+id/DashBordUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Android Studio"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/White"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <com.artproficiencyapp.common.RegularTextview
                android:id="@+id/DashBordUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_10"
                android:maxLines="2"
                android:text="android.studio@android.com"
                android:textColor="@color/White"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_alpha_50"></View>
</LinearLayout>
