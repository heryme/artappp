<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/ic_top_bar"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_logo_hd" />
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.artproficiencyapp.common.RegularTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_right_5"
            android:layout_marginStart="@dimen/margin_left_5"
            android:layout_marginTop="@dimen/margin_top_20"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/varification_code_sent_to_mobile_number"
            android:textColor="#493d3b"
            android:textSize="18sp"
            android:textStyle="normal" />

        <com.artproficiencyapp.common.RegularTextview
            android:id="@+id/verifyNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_right_5"
            android:layout_marginStart="@dimen/margin_left_5"
            android:layout_marginTop="@dimen/margin_top_25"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:text="+91 123456789"
            android:textColor="#493d3b"
            android:textSize="18sp"
            android:textStyle="normal" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_left_5"
            android:layout_marginStart="@dimen/margin_left_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5">

            <com.artproficiencyapp.common.RregularEditext
                android:id="@+id/edtVerificationOne"
                style="@style/verification"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext" />

            <com.artproficiencyapp.common.RregularEditext
                android:id="@+id/edtVerificationTwo"
                style="@style/verification"
                android:layout_height="wrap_content" />

            <com.artproficiencyapp.common.RregularEditext
                android:id="@+id/edtVerificationThree"
                style="@style/verification"
                android:layout_height="wrap_content" />

            <com.artproficiencyapp.common.RregularEditext
                android:id="@+id/edtVerificationFour"
                style="@style/verification"
                android:imeOptions="actionDone"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <com.artproficiencyapp.common.RegularTextview
            android:id="@+id/txtResendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_25"
            android:gravity="center"
            android:textColor="#7A7170"
            android:textSize="@dimen/font_size_16"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_signup"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/verify"
            android:textColor="@color/White" />

        <com.artproficiencyapp.common.RegularTextview
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_25"
            android:gravity="center"
            android:text="05:00"
            android:textColor="#7A7170"
            android:textSize="@dimen/font_size_30"
            android:textStyle="normal" />

        <com.artproficiencyapp.common.RegularTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_marginTop="@dimen/margin_top_20"
            android:gravity="center"
            android:text="@string/please_wait_auto_detecting_code"
            android:textColor="#7A7170"
            android:textSize="@dimen/font_size_16"
            android:textStyle="normal" />
    </LinearLayout>
</ScrollView>
</LinearLayout>