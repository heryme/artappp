<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme_Primary" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_app_base</item>
        <item name="colorPrimaryDark">@color/color_app_base</item>
        <item name="colorAccent">@color/color_app_base</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>


    <style name="WelcomeScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_app_base</item>
        <item name="colorPrimaryDark">@color/color_app_base</item>
        <item name="colorAccent">@color/color_app_base</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="style_toolbar_style">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tab_widget_style">
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="edt_style">
        <item name="android:textColor">@color/black_alpha_80</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/edt_round_corner</item>
        <item name="android:drawablePadding">@dimen/padding_10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/black_alpha_50</item>
    </style>

    <style name="verification">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_marginEnd">@dimen/margin_left_10</item>
        <item name="android:layout_marginStart">@dimen/margin_left_10</item>
        <item name="android:background">@drawable/verification</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:padding">@dimen/padding_20</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:statusBarColor">@color/yourTranslucentColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StudentProfileTheme">
        <item name="colorPrimary">@color/transparant</item>
        <item name="colorPrimaryDark">@color/transparant</item>
        <item name="colorAccent">@color/transparant</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DialogCustomTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/transparant</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.TransparentTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="EditText">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="txt_style">
        <item name="android:textColor">@color/black_alpha_80</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:drawablePadding">@dimen/padding_10</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="changePassWord">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:drawableEnd">@drawable/eye_icon_size</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:drawableStart">@drawable/ic_password_large</item>
        <item name="android:textColorHint">#757575</item>
        <item name="android:textColor">#757575</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/edt_round_corner</item>
    </style>




</resources>
